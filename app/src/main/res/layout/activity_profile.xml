<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Profile Title -->
    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:text="Profile"
        android:textAppearance="@style/heading"
        android:gravity="center_horizontal|center_vertical" />

    <!-- Account Settings Label -->
    <TextView
        android:id="@+id/account_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/profile"
        android:layout_marginTop="20dp"
        android:text="Account settings"
        android:textAppearance="@style/subtitle" />

    <!-- Edit Profile Container -->
    <LinearLayout
        android:id="@+id/edit_profile"
        style="@style/settings"
        android:layout_below="@id/account_settings" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Edit Profile"
            style="@style/subtitle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <!-- Manage Payment Button -->
    <LinearLayout
        android:id="@+id/manage_payment"
        style="@style/settings"
        android:layout_below="@id/edit_profile" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Manage Payment"
            style="@style/subtitle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <!-- Language Button -->
    <LinearLayout
        android:id="@+id/language"
        style="@style/settings"
        android:layout_below="@id/manage_payment" >

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Language"
            style="@style/subtitle" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="English"
            style="@style/subtitle"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="-0.01"
            android:textColor="#896950" />
    </LinearLayout>

    <!-- My Wishlist Button -->
    <LinearLayout
        android:id="@+id/wishlist"
        style="@style/settings"
        android:layout_below="@id/language" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="My Wishlist"
            style="@style/subtitle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <!-- Change Password Button -->
    <LinearLayout
        android:id="@+id/change_password"
        style="@style/settings"
        android:layout_below="@id/wishlist" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Change Password"
            style="@style/subtitle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <!-- About Cafe Button -->
    <LinearLayout
        android:id="@+id/about_cafe"
        style="@style/settings"
        android:layout_below="@id/change_password" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="About Cafe"
            style="@style/subtitle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <!-- Sign Out Button -->
    <LinearLayout
        android:id="@+id/sign_out"
        style="@style/settings"
        android:layout_below="@id/about_cafe" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Sign Out"
            style="@style/subtitle"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="-0.01"
            android:textColor="#9A0000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out"
            android:layout_marginEnd="10dp" />
    </LinearLayout>

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view_profile"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>
